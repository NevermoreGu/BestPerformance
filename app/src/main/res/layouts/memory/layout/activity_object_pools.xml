<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guqian.BestPerformanceApplication.memory.ObjectPoolsActivity">

    <Button
        android:id="@+id/button_foreach_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="for循环对象放循环里面"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_foreach_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="for循环对象放循环外面"
        app:layout_constraintLeft_toLeftOf="@+id/button_foreach_in"
        app:layout_constraintTop_toBottomOf="@+id/button_foreach_in"/>

    <Button
        android:id="@+id/button_object_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="创建对象池"
        app:layout_constraintLeft_toLeftOf="@+id/button_foreach_out"
        app:layout_constraintTop_toBottomOf="@+id/button_foreach_out"/>
</android.support.constraint.ConstraintLayout>
